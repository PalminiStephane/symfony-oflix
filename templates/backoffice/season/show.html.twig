{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ season.name }}</td>
            </tr>
            <tr>
                <th>NbEpisode</th>
                <td>{{ season.nbEpisode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_season_index') }}">back to list</a>
