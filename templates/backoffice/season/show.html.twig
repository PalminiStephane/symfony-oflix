    {# {% if 'ROLE_ADMIN' in app.user.roles %} #}
    {% if is_granted("ROLE_ADMIN") %}

        <a href="{{ path('app_backoffice_season_edit', {'id': season.id}) }}">edit</a>

        {{ include('backoffice/season/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
