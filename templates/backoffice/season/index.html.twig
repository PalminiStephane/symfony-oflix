{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>
    {% if is_granted("ROLE_ADMIN")%}
        <a href="{{ path('app_backoffice_season_new') }}" class="btn btn-primary" >Create new</a>
    {% endif %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NbEpisode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.name }}</td>
                <td>{{ season.nbEpisode }}</td>
                <td>
                    <a href="{{ path('app_backoffice_season_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('app_backoffice_season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
